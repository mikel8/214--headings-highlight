{
  "manifest_version": 3,
  "name": "Headings Highlight",
  "version": "1.0",
  "icons": {
    "16": "headings-highlight-16_x_16.png",
    "48": "headings-highlight-48_x_48.png",
    "128": "headings-highlight-128_x_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "headings-highlight-16_x_16.png",
      "48": "headings-highlight-48_x_48.png",
      "128": "headings-highlight-128_x_128.png"
    }
  },
  "permissions": ["activeTab", "scripting","tabs"],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ]
  
}